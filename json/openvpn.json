{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables":
    {
        "VNETUrl":"[concat(parameters('BaseTemplateUrl'),'openvpn-vnet.json')]",
        "NSGUrl":"[concat(parameters('BaseTemplateUrl'),'openvpn-vnet-subnet-default-nsg.json')]"
    },
    "parameters": 
    {
        "UseParameterFile":
        {
            "type": "bool",
            "defaultValue": true,
            "allowedValues": 
            [
                true,
                false
            ],
            "metadata":  
            {
                "description":"This is required to supoort providing deployment file from the auzre portal, anyway it will be ignored udring deployment."
            }

        },
        "BaseTemplateUrl":
        {
            "type": "string"
        },
        "VirtualNetworkName":
        {
            "type": "string"
        },
        "VirtualNetworkAddressSpace":
        {
            "type":"string"
        },
        "NetworkSecurityGroupName":
        {
            "type":"string"
        }
    },
    "resources": 
    [
        {
            "apiVersion":"2018-02-01",
            "name":"VNETDeployment",
            "type":"Microsoft.Resources/deployments",
            "properties":
            {
                "mode":"Incremental",
                "templateLink":
                {
                    "uri":"[variables('VNETUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters":
                {
                    "VirtualNetworkName":
                    {
                        "value": "[parameters('VirtualNetworkName')]"
                    },
                    "VirtualNetworkAddressSpace":
                    {
                        "value": "[parameters('VirtualNetworkAddressSpace')]"
                    }
                }
            },
            "dependsOn": 
            [
                "NSGDeployment"
            ] 
        },
        {
            "apiVersion":"2018-02-01",
            "name":"NSGDeployment",
            "type":"Microsoft.Resources/deployments",
            "properties":
            {
                "mode":"Incremental",
                "templateLink":
                {
                    "uri":"[variables('NSGUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters":
                {
                    "NetworkSecurityGroupName" :
                    {
                        "value": "[parameters('NetworkSecurityGroupName')]"
                    }
                }
            } 
        },
        {
            "apiVersion":"2018-02-01",
            "name":"SUBNETNSGUpdate",
            "type":"Microsoft.Resources/deployments",
            "properties":
            {
                "mode":"Incremental",
                "template":
                {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources":
                    [
                        {  
                            "type": "Microsoft.Network/virtualNetworks",
                            "name": "[parameters('VirtualNetworkName')]",
                            "apiVersion": "2018-02-01",
                            "location": "[resourceGroup().location]",
                            "tags": {},
                            "properties": 
                            {
                                "addressSpace": 
                                {
                                    "addressPrefixes": 
                                    [
                                        "[parameters('VirtualNetworkAddressSpace')]"
                                    ]
                                },
                                "subnets": 
                                [
                                    {
                                        "name": "default",
                                        "properties": 
                                        {
                                            "addressPrefix":"[parameters('VirtualNetworkAddressSpace')]",
                                            "networkSecurityGroup":
                                            {
                                                "id":"[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NetworkSecurityGroupName'))]"
                                            }
                                        } 
                                    }
                                ]
                            }
                        }
                    ]
                }
            },"dependsOn": 
            [
                "VNETDeployment","NSGDeployment"
            ]
        }
    ]
}